<h1><p><%= @list.name %></p></h1>


<%= link_to "Back", lists_path %>

<% @list.bookmarks.each do |bookmark| %>

<div class="card" style="width: 18rem;">
  <img class="card-img-top" src="<%= bookmark.movie.poster_url %>" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title"><%= bookmark.movie.title %></h5>
    <p class="card-text"><%= bookmark.movie.overview %></p>
  </div>
</div>
<div class="card" style="width: 18rem;">
  <div class="card-header">
    <%= bookmark.comment %>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"> <%= link_to 'Delete', bookmark_path(bookmark),
        method: :delete,
        data: { confirm: "Are you sure?" } %></li>
  </ul>
</div>
<% end %>

<h3>Add a bookmark</h3>
<%= render 'bookmarks/new', bookmark: @bookmark %>
<%= link_to ' Add Bookmark', new_list_bookmark_path(@list) %>
